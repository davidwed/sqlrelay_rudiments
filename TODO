			- initialize(filename,...)
			- connect()
			- connect(filename,...)
		msgqueueclient : client, msgqueueutil
			- initialize(namevaluepairs *nvp)=0
			- initialize(key,...)
			- connect()
			- connect(key,...)
		shmclient : client, shmutil
			- initialize(namevaluepairs *nvp)=0
			- initialize(key,...)
			- connect()
			- connect(key,...)
		fifoclient : client, fifoutil
