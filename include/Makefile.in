top_builddir = ..

include ../config.mk

HEADERS = @HEADERS@
PRIVATEHEADERS = @PRIVATEHEADERS@

all:

install:
	$(MKINSTALLDIRS) $(includedir)$(SLASH)rudiments
	$(MKINSTALLDIRS) $(includedir)$(SLASH)rudiments$(SLASH)private
	cd rudiments $(AND) $(CP) $(HEADERS) $(includedir)$(SLASH)rudiments
	cd rudiments$(SLASH)private $(AND) $(CP) $(PRIVATEHEADERS) $(includedir)$(SLASH)rudiments$(SLASH)private
	$(CHMOD) 644 $(includedir)$(SLASH)rudiments$(SLASH)*.h $(includedir)$(SLASH)rudiments$(SLASH)private$(SLASH)*.h

uninstall:
	$(RMTREE) $(includedir)$(SLASH)rudiments
