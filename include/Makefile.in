top_builddir = ..

include ../config.mk

HEADERS = @HEADERS@
PRIVATEHEADERS = @PRIVATEHEADERS@

all:

install:
	$(MKINSTALLDIRS) $(includedir)/rudiments
	$(MKINSTALLDIRS) $(includedir)/rudiments/private
	cd rudiments $(AND) $(CP) $(HEADERS) $(includedir)/rudiments
	cd rudiments/private $(AND) $(CP) $(PRIVATEHEADERS) $(includedir)/rudiments/private
	$(CHMOD) 644 $(includedir)/rudiments/*.h $(includedir)/rudiments/private/*.h

uninstall:
	$(RMTREE) $(includedir)/rudiments
