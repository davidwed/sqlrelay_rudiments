top_builddir = ..

include ../config.mk

.PHONY: all clean install uninstall

CPPFLAGS = $(WERROR) $(BASECPPFLAGS) -I../ -I../include @EXTRACPPFLAGS@
LIBS = $(SOCKETLIBS) $(PTHREADLIB) $(SSLLIBS) $(PCRELIBS) $(NANOSLEEPLIB) $(CLOCKNANOSLEEPLIB) $(SHMOPENLIB) $(CRYPTLIB) $(INETATONLIB) $(NETAPI32LIB) $(BELIB) $(GNULIB) $(CRTLIB) $(DLLIB) $(DEBUGLIB)

SRCS = winsock.cpp @SRCS@
LOBJS = winsock.lo @LOBJS@

.SUFFIXES: .lo

.cpp.lo:
	$(LTCOMPILE) $(CXX) $(CXXFLAGS) $(CPPFLAGS) $(COMPILE) $< $(OUT)$@

all: librudiments.$(LIBEXT)

clean:
	$(LTCLEAN) $(RM) *.lo *.$(LIBEXT) *.o
	$(RMTREE) .libs

librudiments.$(LIBEXT): $(SRCS) $(LOBJS)
	$(LTLINK) $(LINK) $(OUT)$@ $(LOBJS) $(LDFLAGS) $(LIBS) $(LINKFLAGS)

install:
	$(MKINSTALLDIRS) $(libdir)
	$(LTINSTALL) $(INSTALL) librudiments.$(LIBEXT) $(libdir)/librudiments.$(LIBEXT)
	$(LTFINISH) $(libdir)

uninstall:
	$(LTUNINSTALL) $(RM) $(libdir)/librudiments.$(LIBEXT)
